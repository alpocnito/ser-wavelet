{
    "input_path": "/media/greca/HD/Datasets/PROPOR 2022",
    "output_path": "./features",
    "sample_rate": 16000,
    "dataset": "propor2022",
    "mode": "mode_2",
    "wavelet": {
        "type": "dwt",
        "name": "db4",
        "level": 4,
        "mode": "symmetric"
    },
    "feature": {
        "name": "mel_spectrogram",
        "n_fft": 1024,
        "hop_length": 256,
        "n_mels": 64
    },
    "data_augmentation": {
        "mode": "feature",
        "target": "all",
        "p": 1,
        "techniques": {
            "specaugment": {
                "transformations": ["time_mask", "frequency_mask"],
                "mask_samples": 10
            }
        }
    },
    "model": {
        "name": "cnn",
        "use_gpu": false,
        "output_path": "./checkpoints",
        "batch_size": 16,
        "learning_rate": 0.001,
        "epochs": 50,
        "use_lr_scheduler": true
    },
    "kfold": {
        "num_k": 5
    },
    "overwrite": false,
    "to_mono": true
}