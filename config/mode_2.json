{
    "input_path": "/media/greca/HD/Datasets/PROPOR 2022",
    "output_path": "./features8k",
    "sample_rate": 8000,
    "dataset": "propor2022",
    "mode": "mode_2",
    "wavelet": {
        "type": "dwt",
        "name": "db8",
        "level": 4,
        "mode": "symmetric"
    },
    "feature": {
        "name": "mel_spectrogram",
        "n_fft": 400,
        "hop_length": 200,
        "n_mels": 128,
        "f_min": 0,
        "f_max": 4000
    },
    "data_augmentation": {
        "mode": "feature",
        "target": "all",
        "p": 1,
        "techniques": {
            "specaugment": {
                "transformations": ["frequency_mask", "time_mask"],
                "freq_mask_samples": 10,
                "time_mask_samples": 5
            }
        }
    },
    "model": {
        "name": "cnn2",
        "use_gpu": true,
        "output_path": "./checkpoints",
        "batch_size": 32,
        "learning_rate": 0.001,
        "epochs": 100,
        "use_lr_scheduler": false
    },
    "kfold": {
        "num_k": 5
    },
    "overwrite": false,
    "to_mono": true
}