{
    "input_path": "/media/greca/HD/Datasets/PROPOR 2022",
    "output_path": "./features",
    "sample_rate": 8000,
    "dataset": "propor2022",
    "mode": "mode_3",
    "wavelet": {
        "type": "dwt",
        "name": "db4",
        "level": 4,
        "mode": "symmetric"
    },
    "data_augmentation": {
        "mode": "raw_audio",
        "target": "all",
        "p": 0.5,
        "techniques": {
            "audioaugment": {
                "transformations": ["pitch_shift", "time_mask", "tanh_distortion"]
            }
        }
    },
    "model": {
        "name": "mlp",
        "use_gpu": true,
        "output_path": "./checkpoints",
        "batch_size": 32,
        "learning_rate": 0.001,
        "epochs": 100,
        "use_lr_scheduler": true
    },
    "kfold": {
        "num_k": 5
    },
    "overwrite": false,
    "to_mono": true
}